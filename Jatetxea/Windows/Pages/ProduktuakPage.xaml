<Page x:Class="Jatetxea.Windows.Pages.ProduktuakPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProduktuakPage">

    <Grid Background="Gray">
        <DataGrid ItemsSource="{Binding ProduktuakList}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Izena" Binding="{Binding Izena}" Width="*"/>
                <DataGridTextColumn Header="Mota" Binding="{Binding Mota}" Width="*"/>
                <DataGridTextColumn Header="Prezioa" Binding="{Binding Prezioa}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

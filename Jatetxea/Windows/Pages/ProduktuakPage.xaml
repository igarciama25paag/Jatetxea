<Page x:Class="Jatetxea.Windows.Pages.ProduktuakPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Produktuak">
    
    <Border BorderBrush="DarkGray" BorderThickness="1">
        <Grid Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="PRODUKTUAK" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"/>
            
            <DataGrid x:Name="ProduktuakDataGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding ProduktuakList}"
                  AutoGenerateColumns="False"
                  SelectionChanged="ProduktuakDataGrid_SelectionChanged"
                  RowEditEnding="ProduktuakDataGrid_RowEditEnding">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Produktua" Binding="{Binding Izena}" Width="2*"/>
                    <DataGridTextColumn Header="Mota" Binding="{Binding Mota}" Width="*"/>
                    <DataGridTextColumn Header="Prezioa" Binding="{Binding Prezioa}" Width="*"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="Berria" Content="Berria" Width="100" Height="30" Margin="10"/>
                <Button x:Name="EzabatuButton" Click="Ezabatu" Content="Ezabatu" IsEnabled="False" Width="100" Height="30" Margin="10"/>
            </StackPanel>

        </Grid>
    </Border>
</Page>

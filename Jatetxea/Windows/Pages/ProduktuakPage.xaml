<Page x:Class="Jatetxea.Windows.Pages.ProduktuakPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProduktuakPage">

    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
            <Button Click="Sortu" Content="Sortu" Width="100" Height="30" Margin="10"/>
            <Button x:Name="EzabatuButton" Click="Ezabatu" Content="Ezabatu" IsEnabled="False" Width="100" Height="30" Margin="10"/>
        </StackPanel>
        
        <DataGrid x:Name="ProduktuakDataGrid"
                  ItemsSource="{Binding ProduktuakList}"
                  AutoGenerateColumns="False"
                  SelectionChanged="ProduktuakDataGrid_SelectionChanged"
                  RowEditEnding="ProduktuakDataGrid_RowEditEnding"
                  Background="LightGray">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" Width="0"/>
                <DataGridTextColumn Header="Izena" Binding="{Binding Izena}" Width="2*"/>
                <DataGridTextColumn Header="Mota" Binding="{Binding Mota}" Width="*"/>
                <DataGridTextColumn Header="Prezioa" Binding="{Binding Prezioa}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
    </DockPanel>
</Page>

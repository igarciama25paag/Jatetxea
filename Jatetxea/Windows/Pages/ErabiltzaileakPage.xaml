<Page x:Class="Jatetxea.Windows.Pages.ErabiltzaileakPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Erabiltzaileak">

    <Border BorderBrush="DarkGray" BorderThickness="1">
        <Grid Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="ERABILTZAILEAK" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"/>

            <DataGrid x:Name="ErabiltzaileakDataGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      SelectionChanged="ErabiltzaileakDataGrid_SelectionChanged"
                      RowEditEnding="ErabiltzaileakDataGrid_RowEditEnding">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Erabiltzailea" Binding="{Binding Izena}" Width="*"/>
                    <DataGridTextColumn Header="Pasahitza" Binding="{Binding Pasahitza}" Width="*"/>
                    <DataGridComboBoxColumn Header="Mota" SelectedValueBinding="{Binding Mota}" x:Name="colMota" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="Berria" Content="Berria" Width="100" Height="30" Margin="10"/>
                <Button x:Name="EzabatuButton" Click="Ezabatu" Content="Ezabatu" IsEnabled="False" Width="100" Height="30" Margin="10"/>
            </StackPanel>

        </Grid>
    </Border>
</Page>

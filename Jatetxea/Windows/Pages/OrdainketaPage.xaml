<Page x:Class="Jatetxea.Windows.Pages.OrdainketaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ordainketa">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ORDAINKETA" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"/>

        <Border Grid.Row="1" BorderBrush="DarkGray" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
                    <TextBlock Text="Totala:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox x:Name="totalaBox" Text="0,00 €"
                             TextAlignment="Right" FontWeight="Bold" Width="100" IsEnabled="False"/>
                </StackPanel>

                <ListBox x:Name="ticketListBox"
                         ItemsSource="{Binding Ticket}"
                         SelectionChanged="Ticket_SelectionChanged"
                         Margin="20"/>
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Produktu motak:" FontWeight="Bold"/>
                <ListBox x:Name="produktuMotakListBox"
                         ItemsSource="{Binding ProduktuMotakList}"
                         SelectionChanged="ProduktuMota_SelectionChanged"
                         Margin="5" Width="150"/>
            </DockPanel>

            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Produktuak:" FontWeight="Bold"/>
                <ListBox ItemsSource="{Binding ProduktuakList}"
                         DisplayMemberPath="DisplayName"
                         MouseDoubleClick="DoubleClick_ProduktuakList"
                         Margin="5" Width="150"/>
            </DockPanel>

            <StackPanel VerticalAlignment="Center">
                <Button x:Name="kenduButton"
                        Click="KenduClick"
                        IsEnabled="False"
                        Content="Kendu" Width="150" Height="30" Margin="5"/>
                <Button x:Name="ordainduButton"
                        Click="OrdainduEtaInprimatuClick"
                        IsEnabled="False"
                        Content="Ordaindu eta Inprimatu" Width="150" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

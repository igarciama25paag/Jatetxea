<Page x:Class="Jatetxea.Windows.Pages.OrdainketaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ordainketa">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ORDAINKETA" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"/>

        <Border Grid.Row="1" BorderBrush="DarkGray" BorderThickness="1">
            
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <StackPanel>
                <TextBlock Text="Produktu motak:" FontWeight="Bold"/>
                <ListBox Height="70" Margin="5" Width="150"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Produktuak:" FontWeight="Bold"/>
                <ListBox Height="70" Margin="5" Width="150"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center">
                <Button Content="Gehitu" Click="GehituClick" Width="100" Height="30" Margin="5"/>
                <Button Content="Kendu" Click="KenduClick" Width="100" Height="30" Margin="5"/>
            </StackPanel>
            <Button Content="Ordaindu eta Inprimatu" Click="OrdainduEtaInprimatuClick" Width="150" Height="30" Margin="5"/>
        </StackPanel>
        
    </Grid>
</Page>

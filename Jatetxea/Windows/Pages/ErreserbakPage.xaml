<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:ErreserbakLibrary="clr-namespace:ErreserbakLibrary;assembly=ErreserbakLibrary" x:Class="Jatetxea.Windows.Pages.ErreserbakPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Erreserbak">

    <Grid Background="WhiteSmoke">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ERRESERBAK" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"
           FontSize="24"
           FontWeight="Bold"/>

        <Border Grid.Row="1" BorderBrush="DarkGray" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="10">

                    <DatePicker x:Name="datePicker"
                                SelectedDateChanged="SelectedDateChanged"
                                VerticalAlignment="Center"
                                DisplayDateStart="{x:Static sys:DateTime.Now}"
                                SelectedDate="{x:Static sys:DateTime.Now}"
                                Margin="20,0"/>

                    <StackPanel VerticalAlignment="Center">
                        <RadioButton x:Name="bazkariaCheckBox"
                                     Checked="CheckBoxChecked"
                                     GroupName="janordua"
                                     Content="Bazkaria"
                                     Margin="0,5"
                                     IsChecked="True"/>
                        <RadioButton x:Name="afariaCheckBox"
                                     Checked="CheckBoxChecked"
                                     GroupName="janordua"
                                     Content="Afaria"
                                     Margin="0,5"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel x:Name="mahaiak" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Erreserbak:" Margin="10,0,0,0" FontWeight="Bold"/>
                <ListBox x:Name="listBoxErreserbak"
                         ItemsSource="{Binding ErreserbakList}"
                         SelectionChanged="Erreserbak_SelectionChanged"
                         Width="300" Margin="10,5"/>
            </DockPanel>

            <Button Content="Erreserbatu" Click="ErreserbatuClick" Width="120" Height="30" Margin="10"/>
            <Button x:Name="ezabatuButton"
                    Content="Erreserba ezabatu"
                    Click="ErreserbaEzabatuClick"
                    IsEnabled="False" Width="120" Height="30" Margin="10"/>

        </StackPanel>
    </Grid>
</Page>

<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jatetxea.Windows.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:ErreserbakLibrary="clr-namespace:ErreserbakLibrary;assembly=ErreserbakLibrary" x:Class="Jatetxea.Windows.Pages.ErreserbakPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Erreserbak">

    <Grid Background="WhiteSmoke">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ERRESERBAK" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"
           FontSize="24"
           FontWeight="Bold"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <DatePicker x:Name="datePicker"
                        VerticalAlignment="Center"
                        DisplayDateStart="{x:Static sys:DateTime.Now}"
                        SelectedDate="{x:Static sys:DateTime.Now}"
                        Margin="20,0"/>

            <StackPanel VerticalAlignment="Center">
                <RadioButton x:Name="bazkariaCheckBox" GroupName="janordua" Content="Bazkaria" Margin="0,5" IsChecked="True"/>
                <RadioButton x:Name="afariaCheckBox" GroupName="janordua" Content="Afaria" Margin="0,5"/>
            </StackPanel>

        </StackPanel>

        <Border Grid.Row="2" BorderBrush="DarkGray" BorderThickness="1">
            <StackPanel x:Name="mahaiak" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Erreserbak:" Margin="10,0,0,0" FontWeight="Bold"/>
                <ListBox x:Name="listBoxErreserbak" Width="300" Height="70" Margin="10,5"/>
            </StackPanel>
            
            <Button Content="Erreserbatu" Click="ErreserbatuClick" Width="120" Height="30" Margin="10"/>
            <Button Content="Erreserba ezabatu" Click="ErreserbaEzabatuClick" Width="120" Height="30" Margin="10"/>
            
        </StackPanel>

    </Grid>
</Page>

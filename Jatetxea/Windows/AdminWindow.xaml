<Window x:Class="Jatetxea.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jatetxea.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Admin" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Background="White">
            <Button Click="Produktuak" x:Name="produktuakButton" Content="Produktuak" Margin="10" Height="50"/>
            <Button Click="Erabiltzaileak" x:Name="erabiltzaileakButton" Content="Erabiltzaileak" Margin="10" Height="50"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Click="Logout" Content="Saioa itxi" Margin="10,5" Height="30"/>
            <Button Click="Exit" Content="Irten" Margin="10,5" Height="30"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Navigated="MainFrame_Navigated" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.RowSpan="2" Loaded="Produktuak"/>
    </Grid>
</Window>
